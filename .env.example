# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
SESSION_SECRET=change-this-to-random-string-in-production

# GitLab Webhook Secret Token
GITLAB_WEBHOOK_SECRET=

# GitLab Access Token (for private repositories)
# Create at: GitLab → Settings → Access Tokens → Add new token
# Scopes required: read_repository
GITLAB_ACCESS_TOKEN=your_webhook_secret_here

# Deployment Configuration
DEPLOY_BASE_PATH=/var/www/apps
MAX_CONCURRENT_DEPLOYS=3

# Docker Configuration
APP_PORT=3000
BASE_DOMAIN=example.com

# Cloudflare Configuration (Optional - for automatic DNS record creation)
# If not set, you must manually create wildcard DNS: *.example.com -> VPS_IP
CLOUDFLARE_API_TOKEN=
VPS_PUBLIC_IP=

# SSL Configuration
SSL_EMAIL=admin@example.com

# Log Configuration
LOG_LEVEL=info
KEEP_DEPLOYMENT_LOGS_DAYS=30

# Database Configuration
# PostgreSQL version for created databases (use 'latest' or specific version like '16' or '15-alpine')
POSTGRES_VERSION=latest
# Data directory for database volumes
POSTGRES_DATA_DIR=/var/vellaric/postgres

# Backup Configuration
# Local backup directory (fallback if S3 not configured)
BACKUP_LOCAL_DIR=/var/vellaric/backups

# S3-Compatible Storage (AWS S3, Backblaze B2, DigitalOcean Spaces, etc.)
# Leave empty to use local storage only
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1
# Optional: For S3-compatible services (Backblaze B2, DO Spaces)
# Example: https://s3.us-west-002.backblazeb2.com
S3_ENDPOINT=